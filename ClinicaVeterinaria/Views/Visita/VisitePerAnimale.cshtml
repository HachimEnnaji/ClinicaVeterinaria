@model IEnumerable<ClinicaVeterinaria.Models.Visita>



@Html.ActionLink("Effettua visita", "Create", "Visita", new { id = TempData["idAnimale"] }, null)


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Animale.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Animale.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataVisita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Esame)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescrizioneCura)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Animale.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItel => item.Animale.Tipo)
            </td>
            <td>
                @item.DataVisita.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Esame)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescrizioneCura)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdVisita }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdVisita }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdVisita })
            </td>
        </tr>
    }

</table>
