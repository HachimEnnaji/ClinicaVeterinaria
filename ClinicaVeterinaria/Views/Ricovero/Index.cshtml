@model IEnumerable<ClinicaVeterinaria.Models.Ricovero>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (!string.IsNullOrEmpty(Request.QueryString["id"]))
{
    @Html.ActionLink("Effettua visita", "Create", "Ricovero", new { id = Request.QueryString["id"] }, null)
}



<div class="row">
    <div class="col-md-10">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Animale.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataInizio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Costo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAttivo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Animale.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataInizio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Costo)
                    </td>
                    <td>
                        @{ if (item.IsAttivo == true)
                            {
                                <span>Ricoverato</span>
                            }
                            else
                            {
                                <span>Non Ricoverato</span>
                            }
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdRicovero }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdRicovero }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdRicovero })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-md-2 bg-secondary rounded-3 p-3">
        <h4>Rimborso Comune</h4>
        <select id="select" class="form-control">
            <option value="1">Gennaio</option>
            <option value="2">Febbraio</option>
            <option value="3">Marzo</option>
            <option value="4">Aprile</option>
            <option value="5">Maggio</option>
            <option value="6">Giugno</option>
            <option value="7">Luglio</option>
            <option value="8">Agosto</option>
            <option value="9">Settembre</option>
            <option value="10">Ottobre</option>
            <option value="11">Novembre</option>
            <option value="12">Dicembre</option>
        </select>
        <input class="form-control" id="CalcoloRimborso" readonly value="0" />
        <button id="bottone" class="btn btn-outline-success">Aggiorna</button>
    </div>
</div>

@section Scripts{
    <script>
       
        const bottone = document.getElementById("bottone");
        bottone.addEventListener("click", function () {
            const value = document.getElementById("select").value;
            fetchRimborso(value);
        });

        function fetchRimborso(value) {
            fetch("/Ricovero/RicoveroAttivo?month="+value)
                .then(response => response.json())
                .then(data => {
                    document.getElementById("CalcoloRimborso").value = data > 0 ? data + "€" : data;
                })
                .catch(error => console.error("Errore nel reperimento dati: ", error));
        }

    </script>
}

